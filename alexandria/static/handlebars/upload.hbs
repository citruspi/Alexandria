<div class="container">

    <div class="previewsContainer" style="display: none;"></div>


    <div class="row">

        <div class="col-lg-8 col-lg-offset-2">

            <div class="row">

                <div class="col-lg-12">

                    <div class="well well-lg" id="upload">
                        <center><h2>Drag and Drop an eBook Here</h2></center>
                    </div>

                </div>

            </div>


            <div class="row">

                <div class="col-lg-12">

                    <hr>

                </div>

            </div>

            <div class="row">

                <div class="col-lg-12">

                    <button {{action 'save'}} class="btn btn-primary pull-right">Save and Upload</a>

                </div>

            </div>

            <br>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">File Name</label>
                        {{input type="text" value=filename class="form-control" disabled="disabled"}}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">File Size (Bytes)</label>
                        {{input type="text" value=filesize class="form-control" disabled="disabled"}}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        {{input type="text" value=title class="form-control"}}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Subtitle</label>
                        {{input type="text" value=subtitle class="form-control"}}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Publisher</label>
                        {{input type="text" value=publisher class="form-control"}}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Date Published</label>
                        {{input type="text" value=published class="form-control"}}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">ISBN 10</label>
                        {{input type="text" value=isbn10 class="form-control"}}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">ISBN 13</label>
                        {{input type="text" value=isbn13 class="form-control"}}
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-6">

                    <label>Authors</label>

                    <form class="form-inline">
                        <input class="form-control" type="text" id="authors" class="tm-input" placeholder="Stephen King">
                    </form>

                </div>

                <div class="col-lg-6">

                    <label>Genres</label>

                    <form class="form-inline">
                        <input class="form-control" type="text" id="genres" class="tm-input" placeholder="Young Adult">
                    </form>

                </div>

            </div>

            <div class="row">

                <form {{action "preview" on="submit"}}>

                    <div class="col-lg-6">
                        <label>
                            Cover Image
                        </label>

                        {{input value=cover class="form-control" type="text" placeholder=""}}

                    </div>

                    <div class="col-lg-6">

                        <label>
                            &nbsp;
                        </label>

                        <a class="thumbnail">

                            <img {{bind-attr src=cover}} id="view" width:"100%">

                        </a>

                    </div>

                </form>

            </div>

            <br>

            <div class="row">

                <div class="col-lg-12">

                    <label>Description</label>

                    {{textarea class="form-control" value=description}}

                </div>

            </div>

        </div>

    </div>


</div>
