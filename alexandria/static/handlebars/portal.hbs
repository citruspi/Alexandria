<div class="container">

    <div style="margin-top:25em;">

        <div id="forms">

            <div class="row">

                <div class="col-lg-12">
                    <div id="feedback"</div>                    
                </div>

            </div>

            <div class="row">

                <div class="col-lg-4">
                    <h2>Login</h2>
                </div>

                <div class="col-lg-4">
                    <h2>Register</h2>
                </div>

                <div class="col-lg-4">
                    <h2>Reset Password</h2>
                </div>

            </div>

            <div class="row">

                <div class="col-lg-12">
                    <hr>
                </div>

            </div>

            <div class="row">

                <div class="col-lg-4">
                    <form {{action "login" on="submit"}}>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            {{input value=l_username class="form-control" type="text" placeholder="marktwain"}}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Password</label>
                            {{input value=l_password class="form-control" type="password" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;"}}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary form-control pull-right">Login</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-4">
                    <form {{action "register" on="submit"}}>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Full Name</label>
                            {{input value=n_realname class="form-control" type="text" placeholder="Mark Twain"}}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            {{input value=n_username class="form-control" type="text" placeholder="marktwain"}}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email Address</label>
                            {{input value=n_emailadd class="form-control" type="text" placeholder="mark@twain.com"}}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Password</label>
                            {{input value=n_password class="form-control" type="password" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;"}}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary form-control pull-right">Register</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-4">
                    <form {{action "reset" on="submit"}}>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            {{input value=r_username class="form-control" type="text" placeholder="marktwain"}}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary form-control pull-right">Reset Password</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>

    </div>

</div>
