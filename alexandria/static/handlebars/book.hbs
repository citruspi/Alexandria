<div class="container">

    <div class="row">

        <div class="col-lg-12">

            <ol class="breadcrumb">
                <li>{{#link-to 'library' }}Library{{/link-to}}</li>
                <li><a>Books</a></li>
                <li class="active">{{ title }}</li>
            </ol>

        </div>

    </div>

    <div class="row">

        <div class="col-lg-3">

            <br>

            <a class="thumbnail">
                <img {{bind-attr src=cover}} style="width:100%;" >
            </a>

            {{#link-to 'edit' this class="btn btn-link btn-lg pull-right"}}Edit{{/link-to}}

        </div>

        <div class="col-lg-9">

            <h1>{{ title }} <small>{{ subtitle}}</small></h1>


            <h2><small>By {{#each authors}}
                <a href="#/author/{{unbound this}}">{{ this }}</a>
            {{/each}}</small></h2>

            <br>

            <ul class="nav nav-tabs" id="tabs">
                <li class="active"><a href="#description" data-toggle="tab">Description</a></li>
                <li><a href="#genres" data-toggle="tab">Genres</a></li>
                <li><a href="#identifiers" data-toggle="tab">Identifiers</a></li>
                <li><a href="#downloads" data-toggle="tab">Downloads</a></li>
            </ul>

            <br>

            <div class="tab-content">

                <div class="tab-pane active" id="description">

                    <p class="lead">{{{ description }}}</p>

                </div>

                <div class="tab-pane" id="genres">

                    <ul class="list-inline">{{#each genres}}<li><a href="#/genre/{{unbound this}}"><h3><span class="label label-default">{{ this }}</span></h3></a></li>{{/each}}</ul>

                </div>

                <div class="tab-pane" id="identifiers">

                    <div class="row">

                        <div class="col-lg-6">

                            <table class="table">
                                <thead>
                                    <tr>
                                        <td><strong>Identifier</strong></td>
                                        <td><strong>Value</strong></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Alexandria</td>
                                        <td>{{ id}}</td>
                                    </tr>
                                    <tr>
                                        <td>ISBN 10</td>
                                        <td>{{ isbn-10 }}</td>
                                    </tr>
                                    <tr>
                                        <td>ISBN 13</td>
                                        <td>{{ isbn-13 }}</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>

                <div class="tab-pane" id="downloads">

                    <table class="table">
                        <thead>
                            <tr>
                                <td><strong>Format</strong></td>
                                <td><strong>Size (MB)</strong></td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each formats}}
                            <tr>
                                {{#if this.format}}
                                <td>{{this.format}}
                                <td>{{this.size}}
                                <td><a href="#">Download</a></td>
                                {{else}}
                                <td>{{this}}</td>
                                <td></td>
                                <td><a href="#">Download</a></td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>

            </div>

            <script type="text/javascript">
                $('#line-3').addClass('lead');
            </script>

        </div>

    </div>

</div>
